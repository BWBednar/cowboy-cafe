<UserControl x:Class="PointOfSale.CustomizeTrailBurger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Trail Burger"/>
        <StackPanel Orientation="Horizontal">
            <Label FontSize="20">Ketchup</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=Ketchup}"/>
            <Label FontSize="20">Mustard</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=Mustard}"/>
            <Label FontSize="20">Pickle</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=Pickle}"/>
            <Label FontSize="20">Cheese</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=Cheese}"/>
            <Label FontSize="20">Bun</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=Bun}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
