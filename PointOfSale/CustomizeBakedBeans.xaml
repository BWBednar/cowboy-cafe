<UserControl x:Class="PointOfSale.CustomizeBakedBeans"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Baked Beans"/>
        <TextBlock FontSize="30" Text="Size"/>
        <StackPanel Orientation="Horizontal">
            <CheckBox  FontSize="30" IsChecked="{Binding Path=Size.Size}">Small</CheckBox>
            <CheckBox FontSize="30" IsChecked="{Binding Path=Size.Size}">Medium</CheckBox>
            <CheckBox FontSize="30" IsChecked="{Binding Path=Size.Size}">Large</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
