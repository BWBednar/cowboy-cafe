<UserControl x:Class="PointOfSale.CustomizeAngryChicken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Angry Chicken"/>
        <StackPanel Orientation="Horizontal">
            <Label FontSize="20">Bread</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=Bread}"/>
            <Label FontSize="20">Pickles</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=Pickle}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
