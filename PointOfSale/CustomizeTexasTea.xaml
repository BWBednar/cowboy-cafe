<UserControl x:Class="PointOfSale.CustomizeTexasTea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Cowboy Coffee"/>
        <TextBlock FontSize="30" Text="Select Drink Size"/>
        <StackPanel>
            <RadioButton Margin="5" x:Name="Small" FontSize="20" GroupName="Size" Content="Small" Checked="ChangeSize"/>
            <RadioButton Margin="5" x:Name="Medium" FontSize="20" GroupName="Size" Content="Medium" Checked="ChangeSize"/>
            <RadioButton Margin="5" x:Name="Large" FontSize="20" GroupName="Size" Content="Large" Checked="ChangeSize"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox Margin="10" FontSize="30" IsChecked="{Binding Path=Ice}">Ice</CheckBox>
            <CheckBox Margin="10" FontSize="30" IsChecked="{Binding Path=Lemon}">Lemon</CheckBox>
            <CheckBox Margin="10" FontSize="30" IsChecked="{Binding Path=Sweet}">Sweet Tea</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
