<UserControl x:Class="PointOfSale.CustomizeCowpokeChili"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Cowpoke Chili"/>
        <StackPanel Orientation="Horizontal">
            <Label FontSize="20">Green Onions</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=GreenOnions}"/>
            <Label FontSize="20">Cheese</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=Cheese}"/>
            <Label FontSize="20">Sour Cream</Label>
            <CheckBox Height="20" Width="20" IsChecked="{Binding Path=SourCream}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
