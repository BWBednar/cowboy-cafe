<UserControl x:Class="PointOfSale.CustomizeWater"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Water"/>
        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="30" Text="Select Size"/>
            <RadioButton x:Name="Small" FontSize="20" IsChecked="{Binding Path=Size}" GroupName="Size" Content="Small"/>
            <RadioButton x:Name="Medium" FontSize="20" IsChecked="{Binding Path=Size}" GroupName="Size" Content="Medium"/>
            <RadioButton x:Name="Large" FontSize="20" IsChecked="{Binding Path=Size}" GroupName="Size" Content="Large"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox FontSize="30" IsChecked="{Binding Path=Ice}">Ice</CheckBox>
            <CheckBox FontSize="30" IsChecked="{Binding Path=Lemon}">Lemon</CheckBox>
        </StackPanel>
        
    </StackPanel>
</UserControl>
